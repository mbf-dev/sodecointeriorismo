---

import logoDesktop from '../assets/logo-sodeco-desktop-light.svg';
import logoMobile from '../assets/logo-sodeco-mobile-light.svg';
---

<header class="w-full">
  <!-- Top Section / Mobile Header -->
  <div class="container flex items-center justify-between py-6">
    <!-- Mobile Menu Toggle -->
    <div class="lg:hidden mr-3">
      <button class="btn btn-ghost btn-square hover:bg-base-200 border-0">
        <span class="icon-[iconamoon--menu-burger-horizontal-light] size-7"></span>
      </button>
    </div>

    <!-- Logo -->
    <div class="flex flex-1 justify-start  gap-10">
      <a href="/" class="flex items-center gap-2">
        <img src={logoDesktop.src} width={logoDesktop.width} height={logoDesktop.height} alt="Sodeco Logo" class="h-10 w-auto hidden lg:block" />
        <img src={logoMobile.src} width={logoMobile.width} height={logoMobile.height} alt="Sodeco Logo" class="h-10 w-auto lg:hidden" />
      </a>
      <!-- Desktop Search Bar -->
      <div class="join border-primary h-12 w-full rounded-lg border-2 bg-white max-w-xl hidden lg:flex">
        <input
          class="input join-item h-full w-full rounded-lg border-none pl-4 shadow-none focus:outline-none"
          placeholder="Buscar..."
        />

        <button
          class="btn btn-ghost hover:bg-base-200 text-base-content/70 join-item h-full border-none text-sm font-normal"
          popovertarget="popover-1"
          style="anchor-name:--anchor-1"
        >
          Categorías
          <span class="icon-[iconamoon--arrow-down-2-thin] h-5 w-5"></span>
        </button>
        <ul
          class="dropdown dropdown-end menu border-base-200 x bg-base-100 mt-0.5 w-52 border border-solid shadow-md"
          popover
          id="popover-1"
          style="position-anchor:--anchor-1"
        >
          <li><a>Item 1</a></li>
          <li><a>Item 2</a></li>
        </ul>

        <button class="btn btn-ghost hover:bg-base-200 join-item h-full border-none text-sm">
          <span class="icon-[heroicons--magnifying-glass] size-5"></span>
        </button>
      </div>
    </div>

    <!-- Icons -->
    <div class="flex items-center gap-1 md:gap-2.5">
      <button
        class="btn btn-ghost btn-circle hover:bg-base-200 flex items-center border-0 lg:hidden"
      >
        <span class="icon-[iconamoon--search-light] size-7"></span>
      </button>

      <button class="btn btn-ghost btn-circle hover:bg-base-200 flex items-center border-0">
        <span class="icon-[heroicons--user] size-7"></span>
      </button>

      <button
        class="indicator btn btn-ghost btn-circle hover:bg-base-200 flex items-center border-0"
      >
        <span class="icon-[heroicons--heart] size-7"></span>
        <span
          class="indicator-item btn btn-circle btn-xs btn-primary indicator-item text-base-content pointer-events-none top-2 right-2 size-5 scale-90 border-0 p-0 text-[10px] font-bold"
          >0</span
        >
      </button>

      <button
        class="indicator btn btn-ghost btn-circle hover:bg-base-200 flex items-center border-0"
      >
        <span class="icon-[heroicons--shopping-bag] size-7"></span>
        <span
          class="btn btn-circle indicator-item btn-xs btn-primary indicator-item text-base-content pointer-events-none top-2 right-2 size-5 scale-90 border-0 p-0 text-[10px] font-bold"
          >0</span
        >
      </button>
    </div>
  </div>

  <!-- Bottom Section (Desktop Navigation) -->

  <div class="container md:block hidden">
    <nav class="bg-neutral text-neutral-content flex h-16 items-center rounded-lg px-4">
      <div class="flex cursor-pointer items-center gap-2">
        <span class="icon-[heroicons--bars-3] size-7"></span>
        <span class="font-medium">Menu</span>
      </div>
      <ul class="flex items-center space-x-8 px-8 font-medium whitespace-nowrap">
        <li>
          <a href="#" class="hover:text-primary text-sm transition-colors">Paneles Acústicos</a>
        </li>
        <li>
          <a href="#" class="hover:text-primary text-sm transition-colors">Mobiliario</a>
        </li>
        <li>
          <a href="#" class="text-primary text-sm transition-colors">Presupuesto</a>
        </li>
        <li>
          <a href="#" class="hover:text-primary text-sm transition-colors">Sobre Nosotros</a>
        </li>
        <li>
          <a href="#" class="hover:text-primary text-sm transition-colors">Contacto</a>
        </li>
        <li>
          <a href="#" class="hover:text-primary text-sm transition-colors">Mi Cuenta</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

