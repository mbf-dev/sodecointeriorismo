<div
  class="carousel w-full rounded-2xl overflow-hidden relative group aspect-[16/9] lg:aspect-[21/9]"
>
  <!-- Carousel Item 1 -->
  <div id="item1" class="carousel-item w-full relative">
    <img
      src="https://placehold.co/1200x600/333333/FFFFFF?text=Audio+%26+Home+Cinema"
      class="w-full object-cover"
    />
    <div class="absolute inset-0 bg-black/20 flex flex-col justify-center px-8 lg:px-24">
      <div class="max-w-2xl animate-fade-in-up">
        <h1 class="text-3xl lg:text-5xl font-bold text-white mb-4 lg:mb-6">Audio & Home Cinema</h1>
        <div class="mb-8">
          <p
            class="text-white text-lg lg:inline-block lg:border lg:border-white/50 lg:rounded-full lg:px-6 lg:py-2"
          >
            Descubre el catálogo completo
          </p>
        </div>
        <button
          class="btn btn-primary btn-wide rounded-lg text-black font-bold uppercase tracking-wider"
        >
          Comprar
        </button>
      </div>
    </div>
  </div>

  <!-- Carousel Item 2 -->
  <div id="item2" class="carousel-item w-full relative">
    <img
      src="https://placehold.co/1200x600/222222/FFFFFF?text=Espacios+de+trabajo"
      class="w-full object-cover"
    />
    <div
      class="absolute inset-0 bg-black/20 flex flex-col justify-center px-8 lg:px-24 text-center items-center lg:items-start lg:text-left"
    >
      <div class="max-w-2xl">
        <h1 class="text-3xl lg:text-6xl font-bold text-white mb-4 lg:mb-6">Espacios de trabajo</h1>
        <div class="mb-8">
          <p
            class="text-white text-lg lg:inline-block lg:border lg:border-white/50 lg:rounded-full lg:px-8 lg:py-2"
          >
            Descubre el catálogo completo
          </p>
        </div>
        <button
          class="btn btn-primary px-12 rounded-lg text-black font-bold uppercase tracking-wider"
        >
          Comprar
        </button>
      </div>
    </div>
  </div>

  <!-- Navigation Indicators -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex gap-3">
    <a
      href="#item1"
      class="w-3 h-3 rounded-full bg-white/50 hover:bg-white transition-colors duration-300 pointer-events-auto"
    ></a>
    <a
      href="#item2"
      class="w-3 h-3 rounded-full bg-white/50 hover:bg-white transition-colors duration-300 pointer-events-auto"
    ></a>
    <div class="w-3 h-3 rounded-full bg-white/50"></div>
    <div class="w-3 h-3 rounded-full bg-black"></div>
    <div class="w-3 h-3 rounded-full bg-white/50"></div>
  </div>
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }
</style>
