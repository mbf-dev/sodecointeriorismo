---
import Layout from '../Layout.astro';

interface Props {
  name: string;
  [key: string]: any;
}

const { name, ...props } = Astro.props;
---

<Layout title={`Categoría: ${name}`}>
    <!-- Specific structure for Category Archives -->
    <div class="category-container container mx-auto py-12">
        <header class="mb-12 text-center">
            <h1 class="text-3xl font-bold">Categoría: <span class="text-primary">{name}</span></h1>
            <p class="text-gray-500 mt-2">Explorando artículos en esta categoría.</p>
        </header>
        
        <main class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <slot />
             <!-- TODO: Loop through posts in this category here when we have them linked -->
             <div class="col-span-full text-center py-20 bg-base-200 rounded">
                <p>Listado de posts para {name}...</p>
                 <div class="debug-data mt-4 text-left p-4 text-xs opacity-50">
                    <pre>{JSON.stringify(props, null, 2)}</pre>
                </div>
             </div>
        </main>
    </div>
</Layout>
